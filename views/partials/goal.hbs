<section class="ui middle aligned two column grid segment">
    <div class="column">
        <div class="label">
            <h3 class="ui  center aligned header">Set Goal</h3>
        </div>

        <form class="ui form" action="/dashboard/setgoal/{{member.id}}" method="POST">
            <div class="one field">
                <label>Date</label>
                <input type="date" name="futuredate" value="{{goal.futuredate}}">
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Weight</label>
                    <input placeholder="00.00kg" type="text" name="goalweight" value="{{goal.goalweight}}">
                </div>
                <div class="field">
                    <label>Chest</label>
                    <input placeholder="00.00cm" type="text" name="goalchest" value="{{goal.goalchest}}">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Thigh</label>
                    <input placeholder="00.00cm" type="text" name="goalthigh" value="{{goal.goalthigh}}">
                </div>
                <div class="field">
                    <label>Upper Arm</label>
                    <input placeholder="00.00cm" type="text" name="goalupperarm" value="{{goal.goalupperarm}}">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Waist</label>
                    <input placeholder="00.00cm" type="text" name="goalwaist" value="{{goal.goalwaist}}">
                </div>
                <div class="field">
                    <label>Hips</label>
                    <input placeholder="00.00cm" type="text" name="goalhips" value="{{goal.goalhips}}">
                </div>
            </div>

            <button class="ui green submit button"> Set Goal </button>
        </form>
    </div>
    <div class="column">
        <div>
            <h1 class="ui center aligned huge header goal-icon">
                <i class="trophy green icon"></i>
            </h1>
        </div>
        <div>
            <h1 class="ui center aligned  green header"> {{status}} </h1>
        </div>
    </div>
</section>